// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

enum Gender {
    MALE
    FEMALE
}

model Person {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    name        String
    lastname    String
    gender      Gender
    nationality String
    dateOfBirth DateTime
    RFC         String
    email       String
}

model Organization {
    id          Int    @id @default(autoincrement())
    name        String
    legalRegime String
}

enum PropertyState {
    BAD
    REGULAR
    AVERAGE
    GOOD
    EXCELENT
}

enum RoadType {
    AVENUE
    BOULEVARD
    STREET
    ALLEY
    SIDEWALK
    PATH
    ROAD
}

model Property {
    id             Int           @id @default(autoincrement())
    municipality   String
    exteriorNumber String
    interiorNumber String
    isInMexicoCity Boolean
    isFurnished    Boolean
    pentaltyAmount Int
    state          PropertyState
    roadType       RoadType
}

enum Saction {
    NONE
    LIQUIDATION
    THREE_MONTHS
}

enum PaymentMethod {
    CASH
    WIRE
}

model Contract {
    id                     Int      @id @default(autoincrement())
    date                   DateTime
    durationInMonths       Int
    rentAmount             Int
    landlordId             Int
    organizationId         Int
    tenantId               Int
    guarantorId            Int
    hasAnticipatedPAyments Boolean
    bail                   Int
    allowedOwnerVisits     Int
    city                   String
    state                  String
    includesMaintenance    Boolean
    sanction               Saction
    numberOfCopies         Int
    paymentMethod          PaymentMethod
    signedAt               DateTime
}

